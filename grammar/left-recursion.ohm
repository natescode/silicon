Arithmetic {
  Program = SourceElement*
  SourceElement = Exp ";"
  Exp = BinaryExp
  
  BinaryExp = 
  		| Exp operator Literal  -- binary
        | Literal

  Literal =| number  -- num
           | ident   -- iden
           | Exp --exp

  operator = "+" | "-" | "*" | "/" | "@" ident  -- keywordOperator

  ident  (an identifier)
    = letter alnum*

  number  (a number)
    = digit* "." digit+  -- fract
    | digit+            -- whole
}